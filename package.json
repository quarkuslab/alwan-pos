{
  "name": "alwan-pos",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"WEB,ANDROID\" -c \"blue,green\" \"npm run dev:web\" \"npm run dev:android\"",
    "build": "npm run build:web && npm run copy:web && npm run build:android",
    "dev:web": "vite",
    "dev:android": "cd android && gradlew installDebug && adb shell am start -n com.quarkus.alwanpos.debug/com.quarkus.alwanpos.MainActivity",
    "build:web": "tsc -b && vite build",
    "build:android": "cd android && gradlew assembleRelease && echo 'APK location: android/app/build/outputs/apk/release/app-release.apk'",
    "lint": "eslint .",
    "preview": "vite preview",
    "copy:web": "cpx build/**/* android/app/src/main/assets/build"
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "cpx2": "^8.0.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10"
  }
}
