{
  "name": "alwan-pos",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"WEB,ANDROID\" -c \"blue,green\" \"npm run web:dev\" \"npm run android:dev\"",
    "web:dev": "vite",
    "android:dev": "nodemon --watch android --watch src --ignore android/app/src/main/assets/www --ext ts,tsx,css,html,java,kt,xml,gradle --exec \"npm run web:build && npm run android:copy && npm run android:build && npm run android:launch\"",
    "build": "npm run web:build && npm run android:copy && npm run android:build",
    "web:build": "tsc -b && vite build",
    "android:copy": "rmdir-cli android/app/src/main/assets/www && cpx dist/**/* android/app/src/main/assets/www",
    "android:build": "cd android && gradlew assembleDebug",
    "android:launch": "cd android && gradlew installDebug && adb shell am start -n com.quarkus.alwanpos.debug/com.quarkus.alwanpos.MainActivity",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "cpx2": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.8.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-legacy": "^5.4.3",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "rmdir-cli": "^2.0.6",
    "tailwindcss": "^3.4.14",
    "terser": "^5.36.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10"
  }
}
